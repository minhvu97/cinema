<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="300.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Button fx:id="btnSeat" defaultButton="true" disable="true" layoutX="386.0" layoutY="170.0" mnemonicParsing="false" onAction="#onButtonSeatClicked" text="Chọn ghế" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="10.0" />
      <VBox layoutX="127.0" layoutY="61.0" prefWidth="200.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="60.0">
         <children>
            <ComboBox fx:id="cmbCity" onAction="#onCityChosen" prefWidth="282.0" promptText="Thành phố">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </ComboBox>
            <ComboBox fx:id="cmbCumRap" onAction="#onTheaterChosen" prefHeight="25.0" prefWidth="282.0" promptText="Cụm rạp">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </ComboBox>
            <ComboBox fx:id="cmbPhim" layoutX="10.0" layoutY="55.0" onAction="#onMovieChosen" prefHeight="25.0" prefWidth="282.0" promptText="Chọn phim">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </ComboBox>
            <ComboBox fx:id="cmbTime" layoutX="10.0" layoutY="100.0" onAction="#onTimeChosen" prefHeight="25.0" prefWidth="282.0" promptText="Suất chiếu" />
         </children>
      </VBox>
   </children>
</AnchorPane>
